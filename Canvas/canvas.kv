CanvasEnv4:

# Declaring variables in the kv files

#:set length dp(150)
#:set width dp(150)

<CanvasEnv>:
    canvas:
        Rectangle:
            # Centering the drawing by subtracting the space occupied by the drawing with the actual center of the screen
            pos: self.center_x-length/2, self.center_y-width/2
            size: length,width
        Ellipse:
            pos:200,500
            size: length,width
        Line:
            # works with points like this (start_x,start_y,ending_x,ending_y....)
            # This will create a small pyramid of two lines
            # points: (0,0,100,100,200,0)
            # lets use screen properties to create multiple pyramids with resizing quality
            points: (0,0, self.width/4,100,self.width/2,0,self.width*3/4,100,self.width,0)
        
<CanvasEnv2>:
    # Creating a resizable cross 
    canvas:
        Line:
            points: (0,self.height/2, self.width, self.height/2)
        Line:
            points: (self.width/2,0,self.width/2,self.height)

<CanvasEnv3>:
    # Creating shapes with the help of lines
    canvas:
        Color:
            rgba: 1,0,0,.5
        Line:
            circle: (200,200,100) # center_x, center_y, radius
        Line:
            ellipse: (500,300,100,200) #center_x, center_y, radius_x, radius_y
        Line:
            rectangle: (800,100,300,200) #x, y, w, h

<CanvasEnv4>:
    Button:
        pos: 100,400
        text: "Mover"
        on_press: root.move_box()
