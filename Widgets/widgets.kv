WidgetEnv:

<WidgetEnv>:
    cols:3
    rows:3
    ToggleButton:
        text: "OFF"
        on_state: root.on_state_func(self)
        size_hint: None,1
    Button:
        text: "Click Me"
        on_press: root.on_button_press(self)
        disabled: not root.is_enabled
    Label:
        text: root.label_text
        font_name: "Comic"
        font_size: "80dp"
        color: 1,.5,1,1

    Switch:
        on_active: root.on_switch_active(self)
        id: my_switch
        size_hint: None,1
        width: "80dp"
        # Default State of the Switch
        active: True
    Slider:
        id : my_slider
        min:0
        max:150
        value: 50
        # Corelation with switch widget and it's active state
        disabled: my_switch.active
        on_value: root.on_value_change(self)
        orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max: 150
            value: my_slider.value
